<div class="card mb-4">

    {%  if property.picture %}
        <img src="{{ vich_uploader_asset(property.picture, 'imageFile') | imagine_filter('thumb') }} "   alt="{{ property.title }}" class="card-img-top"/>
    {% else %}
        <img src="{{'images/empty.jpg' | imagine_filter('thumb') }} "   alt="{{ property.title }}" class="card-img-top"/>
    {%  endif  %}

    <div class="card-body">

        <h5 class="card-title" >
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}" >
            {{ property.title }}
            </a>
        </h5>
        <p class="card-text">{{property.description | nl2br}}</p>

        <p class="card-text">{{property.surface}} m2 , {{property.city}} ({{ property.postalcode}})</p>
        <div class="text-primary" style="font-size:2rem" >{{property.formattedPrice}} â‚¬</div>
        
    </div>
</div>